<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".QrCode.AccountSelection">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:foregroundGravity="center"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Select Account for Payment"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/maeaccountbtn"
            android:padding="20dp"
            android:background="@color/yellow"
            android:layout_margin="30dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ZES-A Account"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="90000123456"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RM 800"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/savingacount"
            android:padding="20dp"
            android:background="@color/yellow"
            android:layout_margin="30dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saving Account"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00629193782"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RM 1200"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="5dp"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>